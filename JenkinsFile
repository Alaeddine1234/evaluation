pipeline {
    agent any
    stages {

        stage("Build")
        {
            steps
            {
                script {
                        echo "INFO: Build Stage"
                         sh 'mv Dockerfile dockerfile'
                         sh 'sudo docker build -t my-awesome-project .'
                         sh 'sudo docker images ls.'
                    }
            }
        }

        stage("Deploy")
        {
            steps
            {
                script {
                            echo "INFO: Deploy Stage"
                            sh 'sudo docker rm -f my-awesome-project || true'
                            sh 'sudo docker run --restart always -d -p 80:80 my-awesome-project'
                    }
            }
        }
    }
}
