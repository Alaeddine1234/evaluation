pipeline {
    agent any
    stages {

        stage("Build")
        {
            steps
            {
                script {
                        echo "INFO: Build Stage"
                         sh 'docker build -t my-awesome-project .'
                    }
            }
        }

        stage("Deploy")
        {
            steps
            {
                script {
                            echo "INFO: Deploy Stage"
                            sh 'docker rm -f my-awesome-project || true'
                            sh 'docker run --restart always -d -p 80:80 my-awesome-project'
                    }
            }
        }
    }
}
