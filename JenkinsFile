pipeline {
    agent any
    
    environment {
        TARGET_DIR = "/var/www/simple-app"
        DOCKER_IMAGE = "my-simple-app-image"
        CONTAINER_NAME = "simple-app-container"
    }
    
    stages {
        stage('Pull from GitHub') {
            steps {
                git 'https://github.com/raezon/simple-flask-applications'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    sh "sudo docker build -t ${DOCKER_IMAGE} ${TARGET_DIR}"
                }
            }
        }
        
        stage('Run Docker Container') {
            steps {
                script {
                    sh """
                        sudo docker stop ${CONTAINER_NAME} || true
                        sudo docker rm ${CONTAINER_NAME} || true
                        sudo docker run -d -p 80:80 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}
                    """
                }
            }
        }
        
        stage('Test Application') {
            steps {
                script {
                    echo "hello world"
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Stop and remove the container if tests fail
                if (currentBuild.result == 'FAILURE') {
                    sh "sudo docker stop ${CONTAINER_NAME}"
                    sh "sudo docker rm ${CONTAINER_NAME}"
                }
            }
        }
    }
}
